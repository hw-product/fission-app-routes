.row
  - (route_items + [:adder]).each_slice(4) do |srvs|
    - srvs.each do |srv|
      - if srv == :adder
        .col-md-3
          .panel.route-item-adder.panel-success#route-item-adder
            .panel-body
              .colorize.text-success
                %center
                  .fa.fa-plus-square.fa-4x.route-item-icon
                %center
                  Add Service
      - else
        :ruby
          type = srv.class.to_s.split('::').last
          dom_id = "route-service-#{srv.name}-#{srv.id}-#{type}"
        .sortable.route-item.col-md-3{:id => dom_id, 'data-route-type' => type, 'data-route-id' => srv.id}
          = render :partial => 'route_item', :locals => {:srv => srv, :type => type}
